# AI Data Endpoints - ModSecurity Exception
# This directory contains machine-readable data for AI agents
# No user input processing, only static JSON/MD files

<IfModule mod_security.c>
  SecRuleEngine Off
</IfModule>

# Allow all GET/OPTIONS requests
<RequireAll>
  Require method GET OPTIONS
  Require all granted
</RequireAll>

# CORS for AI agents (already in parent .htaccess, repeated for clarity)
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Accept, User-Agent"
</IfModule>
